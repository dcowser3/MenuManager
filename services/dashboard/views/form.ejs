    <script>
        let aiCheckResults = null;
        let quill = null;

        // Initialize Quill editor after DOM loads
        document.addEventListener('DOMContentLoaded', function() {
            quill = new Quill('#menuEditor', {
                theme: 'snow',
                modules: {
                    toolbar: [
                        ['bold', 'italic', 'underline'],
                        [{ 'align': [] }],
                        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                        ['clean']
                    ]
                },
                placeholder: 'Paste your menu content here...\n\nExample:\nFor the table\nMakimono & Dips\n\nSmoked swordfish...'
            });
        });

        function showAlert(message, type = 'info') {
            const container = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} show`;
            alert.textContent = message;
            container.appendChild(alert);

            setTimeout(() => {
                alert.remove();
            }, 5000);
        }

        function validateStep1() {
            const projectName = document.getElementById('projectName').value.trim();
            const property = document.getElementById('property').value.trim();
            const size = document.getElementById('size').value.trim();
            const orientation = document.getElementById('orientation').value;
            const dateNeeded = document.getElementById('dateNeeded').value;
            const submitterEmail = document.getElementById('submitterEmail').value.trim();
            const menuContent = quill.getText().trim();

            if (!projectName || !property || !size || !orientation || !dateNeeded || !submitterEmail || !menuContent) {
                showAlert('Please fill in all required fields', 'error');
                // Scroll to top to show the error and form fields
                window.scrollTo({ top: 0, behavior: 'smooth' });
                return false;
            }

            if (!submitterEmail.includes('@')) {
                showAlert('Please enter a valid email address', 'error');
                // Scroll to top to show the error and email field
                window.scrollTo({ top: 0, behavior: 'smooth' });
                return false;
            }

            return true;
        }

        async function runBasicCheck() {
            if (!validateStep1()) return;

            const btn = document.getElementById('runCheckBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner"></span>Running AI Check...';

            // Convert Quill content to plain text with proper line breaks
            // Get the HTML and convert it to text while preserving structure
            const delta = quill.getContents();
            let menuContent = '';

            delta.ops.forEach((op) => {
                if (typeof op.insert === 'string') {
                    menuContent += op.insert;
                }
            });

            // Clean up the text (trim and normalize line breaks)
            menuContent = menuContent.trim();

            console.log('Sending to AI:', menuContent); // Debug logging

            try {
                const response = await fetch('/api/form/basic-check', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ menuContent })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to run AI check');
                }

                aiCheckResults = data;
                showStep2(data);
                showAlert('AI check complete! Review the suggestions below.', 'success');

            } catch (error) {
                console.error('Error:', error);
                showAlert('Error running AI check: ' + error.message, 'error');
                btn.disabled = false;
                btn.textContent = 'Run Basic AI Check';
            }
        }

        function showStep2(results) {
            // Hide step 1
            document.getElementById('step1').classList.add('hidden');

            // Show step 2
            document.getElementById('step2').classList.remove('hidden');

            // NEW APPROACH: Use the corrected menu from AI and diff to find changes
            const originalText = results.originalMenu;
            const correctedText = results.correctedMenu;
            const hasChanges = results.hasChanges;

            console.log('Has changes:', hasChanges);
            console.log('Original length:', originalText.length);
            console.log('Corrected length:', correctedText.length);

            // Simple word-level diff to find changes
            const originalWords = originalText.split(/(\s+)/);
            const correctedWords = correctedText.split(/(\s+)/);

            // Replace Quill content with corrected text
            quill.setText(correctedText);

            // Find and highlight changes by comparing word-by-word
            if (hasChanges) {
                let currentIndex = 0;
                const corrections = [];

                for (let i = 0; i < Math.max(originalWords.length, correctedWords.length); i++) {
                    const origWord = originalWords[i] || '';
                    const corrWord = correctedWords[i] || '';

                    if (origWord !== corrWord && corrWord.trim()) {
                        // Found a change - highlight in green
                        quill.formatText(currentIndex, corrWord.length, {
                            background: '#d1fae5'
                        });
                        corrections.push({
                            original: origWord,
                            corrected: corrWord,
                            index: currentIndex
                        });
                    }

                    currentIndex += corrWord.length;
                }

                console.log(`Applied ${corrections.length} corrections`);
            }

            // Display corrected menu in left panel
            const originalDisplay = document.getElementById('originalMenuDisplay');
            originalDisplay.innerHTML = quill.root.innerHTML;

            // Display remaining suggestions in right panel
            const suggestionsDisplay = document.getElementById('suggestionsDisplay');

            if (hasChanges) {
                // Show auto-correction summary
                let html = `
                    <div class="suggestion-item" style="border-left: 3px solid #10b981; background: #ecfdf5;">
                        <div class="suggestion-type" style="color: #065f46;">‚úì AUTO-CORRECTED</div>
                        <div class="suggestion-detail" style="color: #065f46;">
                            High-confidence spelling and grammar corrections have been automatically applied.
                            Green highlights show the changes.
                        </div>
                    </div>
                `;

                // Add remaining suggestions
                if (results.suggestions && results.suggestions.length > 0) {
                    html += results.suggestions.map((suggestion, idx) => {
                        const confidenceClass = `confidence-${suggestion.confidence}`;
                        return `
                            <div class="suggestion-item" data-suggestion-index="${idx}">
                                <div class="suggestion-type">
                                    ${escapeHtml(suggestion.type)}
                                    <span class="confidence-badge ${confidenceClass}">${suggestion.confidence.toUpperCase()}</span>
                                </div>
                                ${suggestion.menuItem ? `<div style="font-weight: 600; color: #2d3748; font-size: 0.75rem; margin: 0.25rem 0;">Item: ${escapeHtml(suggestion.menuItem)}</div>` : ''}
                                <div class="suggestion-detail">${escapeHtml(suggestion.description)}</div>
                                <div style="color: #059669; font-size: 0.75rem; margin-top: 0.25rem;"><strong>Recommendation:</strong> ${escapeHtml(suggestion.recommendation)}</div>
                            </div>
                        `;
                    }).join('');
                }

                suggestionsDisplay.innerHTML = html;
                showAlert('Auto-corrections applied! Green highlights show the changes.', 'success');
            } else if (results.suggestions && results.suggestions.length > 0) {
                // No auto-corrections but have suggestions
                const html = results.suggestions.map((suggestion, idx) => {
                    const confidenceClass = `confidence-${suggestion.confidence}`;
                    return `
                        <div class="suggestion-item" data-suggestion-index="${idx}">
                            <div class="suggestion-type">
                                ${escapeHtml(suggestion.type)}
                                <span class="confidence-badge ${confidenceClass}">${suggestion.confidence.toUpperCase()}</span>
                            </div>
                            ${suggestion.menuItem ? `<div style="font-weight: 600; color: #2d3748; font-size: 0.75rem; margin: 0.25rem 0;">Item: ${escapeHtml(suggestion.menuItem)}</div>` : ''}
                            <div class="suggestion-detail">${escapeHtml(suggestion.description)}</div>
                            <div style="color: #059669; font-size: 0.75rem; margin-top: 0.25rem;"><strong>Recommendation:</strong> ${escapeHtml(suggestion.recommendation)}</div>
                        </div>
                    `;
                }).join('');
                suggestionsDisplay.innerHTML = html;
            } else {
                // No changes and no suggestions
                suggestionsDisplay.innerHTML = `
                    <div class="suggestion-item">
                        <div class="suggestion-type">‚úì All Clear</div>
                        <div class="suggestion-detail">No issues found. Your menu looks perfect!</div>
                    </div>
                `;
            }
        }

        async function submitMenu() {
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner"></span>Submitting...';

            // Get HTML content from Quill to preserve formatting
            const menuContentHtml = quill.root.innerHTML;
            const menuContentText = quill.getText().trim();

            const formData = {
                projectName: document.getElementById('projectName').value.trim(),
                property: document.getElementById('property').value.trim(),
                size: document.getElementById('size').value.trim(),
                orientation: document.getElementById('orientation').value,
                dateNeeded: document.getElementById('dateNeeded').value,
                submitterEmail: document.getElementById('submitterEmail').value.trim(),
                menuContent: menuContentText,
                menuContentHtml: menuContentHtml
            };

            try {
                const response = await fetch('/api/form/submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to submit menu');
                }

                showAlert('Menu submitted successfully! Redirecting to review page...', 'success');

                // Redirect to review page after 2 seconds
                setTimeout(() => {
                    window.location.href = `/review/${data.submissionId}`;
                }, 2000);

            } catch (error) {
                console.error('Error:', error);
                showAlert('Error submitting menu: ' + error.message, 'error');
                btn.disabled = false;
                btn.textContent = 'Submit Menu for Review';
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
