# Microsoft Graph API Configuration
# Get these from Azure Portal > App Registrations
GRAPH_CLIENT_ID=your_azure_app_client_id_here
GRAPH_CLIENT_SECRET=your_azure_app_secret_here
GRAPH_TENANT_ID=your_azure_tenant_id_here
GRAPH_MAILBOX_ADDRESS=designapproval@richardsandoval.com

# Webhook Configuration
# Use ngrok for local testing: ngrok http 3000
# Then update this with your ngrok URL: https://your-ngrok-id.ngrok.io/webhook
WEBHOOK_URL=https://your-public-url.ngrok.io/webhook

# RECOMMENDED: Monitor a specific folder to avoid processing correction emails
# Set to "Menu Submissions" for folder-based processing (safest), or leave empty for inbox monitoring
GRAPH_FOLDER_NAME=

# Email Sending Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Email that receives internal review notifications
INTERNAL_REVIEWER_EMAIL=reviewer@richardsandoval.com

# Approved sender domains (comma-separated, no spaces)
# Only emails from these domains will be processed
APPROVED_SENDER_DOMAINS=richardsandoval.com,example.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# File Paths
SOP_DOC_PATH=samples/sop.txt

# Optional: Storage configuration (for future cloud storage)
STORAGE_BUCKET=menu-submissions

# Optional: Database URL (for future cloud database)
DATABASE_URL=file:./tmp/db

# Dashboard URL (for email links)
DASHBOARD_URL=http://localhost:3005
